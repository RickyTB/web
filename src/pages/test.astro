<!-- 512 Ã— 848--> 

<style>
.bg {
  --width: 512px;
  --height: 848px;
  background: url('/magnus-2050.png') repeat repeat;
  animation: move-image 20s linear infinite forwards;
	width:100%;
	height: 700px;
}

@keyframes move-image {
  0% {
    background-position: 0 0;
  }
  25% {
    background-position: calc(var(--width) * 0.25) calc(var(--height) * 0.25);
  }
  50% {
    background-position: calc(var(--width) * 0.5) calc(var(--height) * 0.5);
  }
  75% {
    background-position: calc(var(--width) * 0.75) calc(var(--height) * 0.75);
  }
  100% {
    background-position: calc(var(--width) * 1) calc(var(--height) * 1);
  }
}
</style>